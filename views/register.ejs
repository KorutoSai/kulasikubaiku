<%- include("partials/headers.ejs") %>


<div class="logBody">
    <main class="form-signin w-100 h-100 m-auto d-flex align-items-center justify-content-center">
        <form action="/register" method="POST">

            <div class="mb-4">
                <h1 class="h3 mb-3 fw-normal">Please Register</h1>

                <%  if(locals.message){%>
                    <p><%= message %></p>
                    <%  }%>
                
    
                <div class="form-floating my-3">
                    <input type="text" class="form-control" id="user" name="user" placeholder="User Name" required>
                    <label for="user">User Name</label>
                </div>
                <div class="form-floating my-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                    <label for="password">Password</label>
                </div>
            </div>

            <button class="btn btn-primary w-100 py-2" value="Submit" type="submit">Register</button>
            <button class="btn btn-light w-100 my-2 py-2" value="Submit" type="submit"> <a href="/login" class="text-black nav-link"> Log In</a></button>

        </form>
    </main>

</div>


